<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alllayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/text_blue_bg_solid_frame"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="@dimen/x11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/essence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/text_purple_bg_solid_frame"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="精华"
            android:textColor="@color/white"
            android:textSize="@dimen/x11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fiery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/text_red_bg_solid_frame"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="火热"
            android:textColor="@color/white"
            android:textSize="@dimen/x11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/x11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/new_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/text_green_bg_solid_frame"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="新"
            android:textColor="@color/white"
            android:textSize="@dimen/x11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/my_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x9"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/black"
            android:textSize="@dimen/x13" />
    </LinearLayout>

    <TextView
        android:id="@+id/my_topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginTop="@dimen/y7"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="--"
        android:textColor="@color/text_gray777"
        android:textSize="@dimen/x11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginTop="@dimen/y7"
        android:gravity="center_horizontal">

        <com.fenbitou.widget.NineGridTestLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sapcing="4dp">>
        </com.fenbitou.widget.NineGridTestLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/my_topic_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="@dimen/x5"
                android:text="--"
                android:textColor="@color/text_gray777"
                android:textSize="@dimen/x14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/my_topic_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/parise"
                android:drawablePadding="@dimen/x5"
                android:text="--"
                android:textColor="@color/text_gray777"
                android:textSize="@dimen/x14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/my_topic_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/browse"
                android:drawablePadding="@dimen/x5"
                android:text="--"
                android:textColor="@color/text_gray777"
                android:textSize="@dimen/x14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>