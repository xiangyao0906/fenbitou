<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="21px"
        android:background="@color/color_f4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="21px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23px"
                        android:singleLine="true"
                        android:text="2015考研英语全程课程"
                        android:textColor="@color/color_33"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23px"
                        android:singleLine="true"
                        android:text="￥68"
                        android:textColor="@color/color_4B"
                        android:textSize="32px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/immediately"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="21px"
                    android:layout_marginRight="21px"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/live_make"
                        android:gravity="center"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:text="立即预约"
                        android:textColor="@color/white"
                        android:textSize="27px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/get_into"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="21px"
                    android:layout_marginRight="21px"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/live_room"
                        android:gravity="center"
                        android:text="进入直播间"
                        android:textColor="@color/white"
                        android:textSize="27px" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="21px"
                android:background="@color/color_f4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:layout_marginRight="23px"
                android:layout_marginBottom="23px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26px"
                    android:text="@string/lecturer"
                    android:textColor="@color/color_33"
                    android:textSize="32px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.yizhilu.widget.NoScrollListView
                        android:id="@+id/teacher_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"></com.yizhilu.widget.NoScrollListView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="21px"
                android:background="@color/color_f4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:layout_marginTop="32px"
                android:layout_marginRight="23px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/introduce"
                    android:textColor="@color/color_33"
                    android:textSize="32px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:layout_marginTop="32px"
                android:layout_marginRight="23px">

                <WebView
                    android:id="@+id/course_web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>