<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/center_layout_color_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_layout_height"
        android:background="@color/top_layout_color_white" >

        <ImageView
            android:id="@+id/iv_finish"
            style="@style/iv_click_commom"
            android:layout_centerVertical="true"
            android:src="@drawable/polyv_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="讨论"
            android:textColor="@color/top_text_color_black"
            android:textSize="@dimen/top_text_size" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/top_layout_height"
            android:layout_height="@dimen/top_layout_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/polyv_white_click_to_gray"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/top_right_text_color_gray"
            android:textSize="@dimen/top_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginRight="@dimen/common_margin_lr"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_topic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_layout_height_l"
            android:layout_marginLeft="@dimen/talk_common_margin"
            android:layout_marginRight="@dimen/talk_common_margin"
            android:background="@null"
            android:hint="#用一句话说出你的讨论话题#"
            android:singleLine="true"
            android:textColor="@color/center_right_text_color_green"
            android:textColorHint="@color/center_left_text_color_gray"
            android:textCursorDrawable="@drawable/polyv_et_cursor_color"
            android:textSize="@dimen/top_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_sline_height"
            android:background="@color/top_sline_color_gray" />

        <EditText
            android:id="@+id/et_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/talk_common_margin"
            android:layout_marginRight="@dimen/talk_common_margin"
            android:layout_marginTop="@dimen/common_margin_tb"
            android:background="@null"
            android:gravity="top"
            android:hint="讨论..."
            android:minLines="19"
            android:textColor="@color/top_text_color_black"
            android:textColorHint="@color/center_left_text_color_gray"
            android:textCursorDrawable="@drawable/polyv_et_cursor_color"
            android:textSize="@dimen/top_text_size" />
    </LinearLayout>

</LinearLayout>