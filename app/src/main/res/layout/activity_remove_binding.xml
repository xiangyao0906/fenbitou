<?xml version="1.0" encoding="utf-8"?>
<!-- 解除第三方登录的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <include layout="@layout/layout_public_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/qq_relat"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/QQImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38px"
                android:background="@drawable/qqimagenot" />

            <TextView
                android:id="@+id/QQText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/QQImage"
                android:textColor="#807c7c"
                android:textSize="38px" />

            <LinearLayout
                android:id="@+id/QQBinding_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="38px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/QQBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:text="@string/immediately_binding"
                    android:textColor="#838383"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/binding_go" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:background="#f6f6f6"></LinearLayout>

        <RelativeLayout
            android:id="@+id/sina_relat"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sinaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38px"
                android:background="@drawable/sinaimagenot" />

            <TextView
                android:id="@+id/sinaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/sinaImage"
                android:textColor="#807c7c"
                android:textSize="38px" />

            <LinearLayout
                android:id="@+id/sinaBinding_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="38px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sinaBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:text="@string/immediately_binding"
                    android:textColor="#838383"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/binding_go" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:background="#f6f6f6"></LinearLayout>

        <RelativeLayout
            android:id="@+id/weixin_relat"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weixinImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38px"
                android:background="@drawable/weixinimagenot" />

            <TextView
                android:id="@+id/weixinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/weixinImage"
                android:textColor="#807c7c"
                android:textSize="38px" />

            <LinearLayout
                android:id="@+id/weixinText_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="38px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weixinBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:text="@string/immediately_binding"
                    android:textColor="#838383"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/binding_go" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view" />
    </LinearLayout>

</LinearLayout>