<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21px"
        android:layout_marginRight="21px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:background="@drawable/look_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/see_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22px"
                        android:text="[回看]"
                        android:textColor="@color/color_66"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="乔布斯的奋斗之路"
                        android:textColor="@color/color_66"
                        android:textSize="32px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="35px"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="35px"
                    android:singleLine="true"
                    android:text="15分钟"
                    android:textColor="@color/color_66"
                    android:textSize="32px" />
            </LinearLayout>
            <TextView
                android:id="@+id/get_into"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:text="进入直播"
                android:textSize="25px"
                android:textColor="@color/color_E7530B"
                android:drawableRight="@drawable/get_into_image"
                android:drawablePadding="14px"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F6" />
    </LinearLayout>

</LinearLayout>