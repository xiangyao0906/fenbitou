<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topic_comment_avatar"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y8"
            android:src="@drawable/weijiazai_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y11">

                <TextView
                    android:id="@+id/topic_comment_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="指尖上的中国"
                    android:textColor="@color/text_gray666"
                    android:textSize="@dimen/x11" />

                <TextView
                    android:id="@+id/loft_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x14"
                    android:text="1楼"
                    android:textColor="@color/text_grayB1B"
                    android:textSize="@dimen/x10" />
            </LinearLayout>

            <TextView
                android:id="@+id/topic_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y6"
                android:text="------------"
                android:textColor="@color/text_gray333"
                android:textSize="@dimen/x11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y7"
                android:layout_marginTop="@dimen/y8">

                <TextView
                    android:id="@+id/topic_comment_addTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5分钟"
                    android:textColor="@color/text_grayB1B"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:id="@+id/topic_comment_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x14"
                    android:drawableLeft="@drawable/parise_little"
                    android:drawablePadding="@dimen/x5"
                    android:gravity="center"
                    android:text="4683"
                    android:textColor="@color/text_gray666"
                    android:textSize="@dimen/x10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>