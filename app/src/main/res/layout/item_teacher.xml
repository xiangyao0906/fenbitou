<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/teacher_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20.25px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaa"
                    android:textColor="@color/Blue"
                    android:textSize="27px" />

                <TextView
                    android:id="@+id/gradeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.75px"
                    android:text="ccc"
                    android:textColor="@color/color_b3"
                    android:textSize="24.75px" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="dfsdf"
                android:textColor="@color/color_b3"
                android:textSize="24.75px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F6" />

</LinearLayout>