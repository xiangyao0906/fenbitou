<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/directory_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="15px"
            android:minHeight="100px"
            android:background="@drawable/chapter_frame"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/directory_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:background="@drawable/iconfont_wodekecheng"/>
            <TextView
                android:id="@+id/directory_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="27px"
                android:textColor="@color/color_9a"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
