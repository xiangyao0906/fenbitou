<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/downloaded_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/downloaded_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/SUCCESS"
                android:textColor="@color/color_main"
                android:textSize="27px" />

            <ImageView
                android:id="@+id/downloaded_line"
                android:layout_width="180px"
                android:layout_height="1dp"
                android:background="@color/color_main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downloading_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/downloading_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/downloading"
                android:textColor="@color/color_67"
                android:textSize="27px" />

            <ImageView
                android:id="@+id/downloading_line"
                android:layout_width="180px"
                android:layout_height="1dp"
                android:background="@color/color_main"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f6" />

    <LinearLayout
        android:id="@+id/download_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>