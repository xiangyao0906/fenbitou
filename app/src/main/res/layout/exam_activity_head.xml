<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32"
        android:background="#3e83e5" >

        <!-- 科目的布局 -->

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/side_menu"
                android:src="@mipmap/top_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x2"
                android:layout_toRightOf="@id/side_menu"
                android:text="@string/subject"
                android:textColor="@color/white"
                android:textSize="@dimen/x13"
                android:visibility="gone" />
        </LinearLayout>
        <!-- 标题 -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x13" />
        <!-- 设置 -->

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x14"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/set_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_layout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/head_exal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x14"
            android:layout_toLeftOf="@id/right_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/right_layout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="考试"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:background="@drawable/btn_home_select" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/school_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x14"
            android:layout_toLeftOf="@id/head_exal"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:id="@+id/school_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网校"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />
        </LinearLayout>
        <!-- 时间 -->

        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x13"
            android:background="@mipmap/time_bg"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>