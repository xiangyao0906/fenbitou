<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="36px"
        android:paddingTop="36px" >

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="138px"
            android:layout_height="138px"
            android:layout_gravity="center"
             />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="21px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaa"
                    android:textColor="@color/Blue"
                    android:textSize="32px" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="23px"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="aaaaaaaaaa"
                android:textColor="@color/color_b3"
                android:textSize="25px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>