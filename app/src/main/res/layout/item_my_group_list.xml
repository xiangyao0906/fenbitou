<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/my_group_avatar"
            android:layout_width="@dimen/x38"
            android:layout_height="@dimen/x38"
            android:layout_marginLeft="@dimen/x19"
            android:scaleType="fitXY"
            android:src="@drawable/weijiazai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x10" >

            <TextView
                android:id="@+id/my_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/text_gray343"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/my_group_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="@dimen/y9"
                android:textColor="@color/text_gray777"
                android:textSize="@dimen/x11" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>