<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_public_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="20px"
            android:background="@color/color_f8" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/system_wifi_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:layout_weight="1"
                android:text="@string/system_wifi"
                android:textColor="@color/color_33"
                android:textSize="34px" />

            <CheckBox
                android:id="@+id/system_wifi_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="27px"
                android:button="@drawable/system_setting_selector"
                android:checked="true" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:background="@color/color_f8" />

        <LinearLayout
            android:id="@+id/system_eliminate"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/system_eliminate_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:layout_weight="1"
                android:text="@string/system_eliminate"
                android:textColor="@color/color_33"
                android:textSize="34px" />

            <TextView
                android:id="@+id/system_eliminate_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="27px"
                android:textColor="@color/tabText"
                android:textSize="34px" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:background="@color/color_f8" />


        <RelativeLayout
            android:id="@+id/system_Testing"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white" >

            <TextView
                android:id="@+id/system_Testing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:text="@string/system_edition"
                android:textColor="@color/color_33"
                android:textSize="34px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27px"
                android:src="@drawable/choice" />

            <ImageView
                android:id="@+id/version_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="27px"
                android:layout_marginTop="25px"
                android:visibility="gone"
                android:layout_toRightOf="@id/system_Testing_text"
                android:src="@drawable/prompt" />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:background="@color/color_f8" />

        <LinearLayout
            android:id="@+id/system_about"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/system_about_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:layout_weight="1"
                android:text="@string/system_about"
                android:textColor="@color/color_33"
                android:textSize="34px" />

            <ImageView
                android:id="@+id/system_about_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="27px"
                android:src="@drawable/choice" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:background="@color/color_f8" />

        <TextView
            android:id="@+id/system_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="40px"
            android:background="@drawable/exit_bg"
            android:gravity="center"
            android:text="@string/exit_account"
            android:textColor="@color/exit_text_bg"
            android:textSize="34px"
            />
    </LinearLayout>
</LinearLayout>