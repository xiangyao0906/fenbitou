<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!-- title布局 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:id="@+id/home_user_advanter"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/userHeadImage"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/logo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_online_school"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="网校"
                    android:textColor="@color/color_33"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/home_exam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="考试"
                    android:textColor="@color/color_33"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/home_community"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="社区"
                    android:textColor="@color/color_33"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />

        <!-- 底部导航栏的布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/color_f1">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10px">

                <RadioButton
                    android:id="@+id/home_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/btn_home_bg"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/tab_text_bg"
                    android:textSize="29px" />

                <RadioButton
                    android:id="@+id/course_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/btn_find_bg"
                    android:gravity="center"
                    android:text="@string/course"
                    android:textColor="@color/tab_text_bg"
                    android:textSize="29px" />

                <RadioButton
                    android:id="@+id/live_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/btn_live_bg"
                    android:gravity="center"
                    android:text="@string/live"
                    android:textColor="@color/tab_text_bg"
                    android:textSize="29px" />

                <RadioButton
                    android:id="@+id/community_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/btn_record_bg"
                    android:gravity="center"
                    android:text="@string/home_community"
                    android:textColor="@color/tab_text_bg"
                    android:textSize="29px" />

                <RadioButton
                    android:id="@+id/mine_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/btn_download_bg"
                    android:gravity="center"
                    android:text="@string/home_mine"
                    android:textColor="@color/tab_text_bg"
                    android:textSize="29px" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>